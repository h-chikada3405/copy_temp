block variable
  -
    var pageNumber = 6 //- 紐づけたいフォームのページナンバー（※ inc/_variable.pug 参照）

//- =================================================================================================
    include（このページのみに読み込ませたい外部ファイルを記述）
  ===================================================================================================
block include
  .
    <?php $page_name = '#{pageList[pageNumber]["fileName"]}';
      if( strpos($_SERVER['HTTP_REFERER'], $page_name) === false ) {
        header('Location: ./'.$page_name.'.html');
        //- header('Location: ./'.$page_name.'/'); //- in_directory=true の場合はこちらを使用
        exit;
      }
    ?>

