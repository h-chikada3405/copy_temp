  ===================================================================================================
block content
  .thanks-wrapper
    .form-wrapper(data-position!='<?= output("form_config", array("form" => $page_name), "form_change_position"); ?>')
      .form-inner
        .form-compleat_unit
          p.form_title <?= output("form_config", array("form" => $page_name), "thanks_title"); ?>
